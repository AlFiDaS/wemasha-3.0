---
interface Props {
  title: string;
  image: string;
  imageHover: string; // ← NUEVO
  category: string;
  slug: string;
}

const { title, image, imageHover, category, slug } = Astro.props;

---

<div class="shadow-xl rounded-2xl overflow-hidden mt-8" data-title={title}>
  <div class="w-full h-56 md:h-96 overflow-hidden relative group"> 
  <a href={`/${category}/${slug}`}>
    <img
      src={image}
      alt={title}
      class="w-full h-full object-cover absolute top-0 left-0 transition-opacity duration-500 group-hover:opacity-0"
    />
    <img
      src={imageHover}
      alt={`${title} hover`}
      class="w-full h-full object-cover opacity-0 group-hover:opacity-100 transition-opacity duration-500"
    />
  </a>
</div>
  <div class="p-2 md:p-4">
    <h2 class="text-base md:text-2xl font-bold text-zinc-900 ">{title}</h2>
    <p class="text-sm text-zinc-500">{category}</p>
    <div class="flex justify-center">
      <a href={`/${category}/${slug}`} class="text-white bg-pink-700 text-sm md:text-base text-center rounded-lg w-full py-2 mt-3">
        Seleccionar Diseño
      </a>
    </div>
  </div>
</div>
