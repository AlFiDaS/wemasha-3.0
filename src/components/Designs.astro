---
import { getCategoryDisplayName } from '../lib/utils.ts';

interface Props {
  title: string;
  image: string;
  imageHover: string;
  category: string;
  slug: string;
}

const { title, image, imageHover, category, slug } = Astro.props;
---

<div class="design-card group bg-white rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 overflow-hidden flex flex-col" data-title={title}>
  <!-- Contenedor de imagen -->
  <div class="relative overflow-hidden flex-shrink-0">
    <a href={`/${category}/${slug}`} class="block">
      <img
        src={image}
        alt={title}
        class="w-full h-64 md:h-80 object-cover transition-opacity duration-500 group-hover:opacity-0"
      />
      <img
        src={imageHover}
        alt={`${title} hover`}
        class="w-full h-full object-cover absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500"
      />
      
      <!-- Overlay en hover -->
      <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-all duration-300"></div>
      
      <!-- Icono de "Ver más" en hover -->
      <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
        <div class="bg-white/90 backdrop-blur-sm rounded-full p-4 shadow-lg">
          <svg class="w-8 h-8 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
        </div>
      </div>
    </a>
  </div>
  
  <!-- Contenido -->
  <div class="p-4 md:p-6 flex flex-col flex-1">
    <!-- Título y categoría -->
    <div class="mb-2 h-[60px] md:h-[70px] flex flex-col justify-center">
      <h2 class="text-base md:text-lg lg:text-xl font-bold text-gray-900 mb-1 group-hover:text-pink-500 transition-colors duration-300 leading-tight">
        {title}
      </h2>
      <p class="text-xs md:text-sm text-gray-600 font-medium leading-tight">
        {getCategoryDisplayName(category)}
      </p>
    </div>
    
    <!-- Botón de acción - empujado hacia abajo -->
    <div class="mt-auto">
      <a 
        href={`/${category}/${slug}`} 
        class="block w-full bg-gradient-to-r from-pink-500 to-pink-600 hover:from-pink-600 hover:to-pink-700 text-white text-center py-3 px-6 rounded-xl font-semibold transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl group/btn"
      >
        <span class="flex items-center justify-center gap-2">
          <span class="whitespace-nowrap">Seleccionar Diseño</span>
          <svg class="w-5 h-5 transition-transform duration-300 group-hover/btn:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </span>
      </a>
    </div>
  </div>
</div>

<style>
  .design-card {
    min-height: 380px;
  }
  
  @media (min-width: 768px) {
    .design-card {
      min-height: 420px;
    }
  }
  
  /* Estilos específicos para mobile */
  @media (max-width: 767px) {
    .design-card h2 {
      font-size: 14px;
      line-height: 18px;
    }
    
    .design-card p {
      font-size: 11px;
      line-height: 14px;
    }
    
    .design-card .whitespace-nowrap {
      white-space: nowrap;
      font-size: 13px;
    }
  }
</style>
