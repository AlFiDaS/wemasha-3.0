---
import Catbtn from '@components/Catbtn.astro';

interface Props {
	slug: string;
    title: string;
    image: string;
}

const { slug, title, image } = Astro.props;
---

<a href={`/${slug}/`} class="cat-item relative overflow-hidden rounded-3xl shadow-2xl hover:shadow-3xl transition-all duration-500 transform hover:scale-[1.02] group block" transition:name={slug}>
    <!-- Imagen de fondo -->
    <div class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-110" style={`background-image: url('${image}')`}></div>
    
    <!-- Overlay gradiente -->
    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
    
    <!-- Contenido -->
    <div class="relative h-full flex items-end p-8 md:p-12">
        <div class="flex flex-col gap-6 md:gap-8">
            <!-- Badge destacado -->
            <div class="inline-flex items-center gap-2 bg-gradient-to-r from-pink-500 to-pink-600 text-white px-4 py-2 rounded-full text-sm font-semibold shadow-lg w-fit">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
                Destacado
            </div>
            
            <!-- Título -->
            <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl max-w-[300px] sm:max-w-[400px] md:max-w-[500px] text-white leading-tight font-black drop-shadow-2xl">
                {title}
            </h1>
            
            <!-- Descripción -->
            <p class="text-white/90 text-lg md:text-xl max-w-[300px] sm:max-w-[400px] leading-relaxed drop-shadow-lg">
                Diseños únicos y personalizados para hacer tu estilo realmente tuyo
            </p>
        </div>
    </div>
    
    <!-- Efecto de brillo en hover -->
    <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
</a>

<style>
    .cat-item {
        height: 400px;
    }
    
    @media (min-width: 768px) {
        .cat-item {
            height: 500px;
        }
        
        .cat-item:nth-last-child(1):nth-child(even) {
            grid-column: span 2;
        }
    }
    
    @media (min-width: 1024px) {
        .cat-item {
            height: 600px;
        }
    }
</style>