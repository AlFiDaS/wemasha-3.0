---
import Categories from '@components/Categories.astro';
import NuestrosDisenos from '@components/NuestrosDisenos.astro';
import Layout from '../layouts/Layout.astro';
import Clientes from '@components/Clientes.astro';
import Preguntas from '@components/Preguntas.astro';
import JsonLd from '@components/JsonLd.astro';
import { getCollection } from 'astro:content';

const categorias = await getCollection('categorias');

const destacado = categorias.find(item => item.slug === 'personalizados');
---

<Layout 
	title="WeMasha - Remeras y Buzos Streetwear de tus Artistas Favoritos"
	description="Descubre nuestra colección de remeras y buzos oversize con diseños exclusivos de artistas internacionales como Jonas Brothers, Harry Styles, Taylor Swift, Slipknot y más, así como íconos argentinos como Duki, Emilia Mernes, Messi y muchos otros. También personalizamos tus prendas con diseños únicos de tus artistas favoritos y mascotas. Además, explora nuestras opciones streetwear, con estilos como mariposas y más. ¡Haz tu estilo único con nosotros!"
	keywords="remeras, buzos, streetwear, artistas, duki, jonas brothers, taylor swift, personalizados, oversize, messi, emilia mernes, slipknot, harry styles"
	ogImage="/images/categories/artistas.jpg"
	canonical="https://wemasha.com"
>
	<div class="max-w-[1440px] mx-auto">
		<div class="mx-auto grid grid-cols-1 md:grid-cols-2 gap-3">
			<div class="col-span-1 md:col-span-2">
				{
					destacado ? (
						<Categories slug={destacado.slug} title={destacado.data.title} image={destacado.data.image} />
					) : (
						<p>No hay destacados</p>
					)
				}
			</div>
			
			<!-- Nuestros Diseños -->
			<div class="col-span-1 md:col-span-2">
				<NuestrosDisenos />
			</div>
		</div>
		<Clientes />
		
		<!-- Sección Galería de Ideas -->
		<section class="py-20 bg-gradient-to-br from-gray-900 via-black to-gray-800 relative overflow-hidden rounded-3xl mt-10">
			<!-- Elementos decorativos de fondo -->
			<div class="absolute inset-0">
				<div class="absolute top-10 left-10 w-20 h-20 bg-pink-500 rounded-full opacity-30 animate-pulse"></div>
				<div class="absolute top-32 right-16 w-16 h-16 bg-pink-400 rounded-full opacity-40 animate-bounce"></div>
				<div class="absolute bottom-20 left-1/4 w-12 h-12 bg-pink-600 rounded-full opacity-35 animate-ping"></div>
				<div class="absolute bottom-32 right-1/3 w-24 h-24 bg-pink-500 rounded-full opacity-25 animate-pulse"></div>
			</div>
			
			<div class="max-w-5xl mx-auto text-center px-4 relative z-10">
				<!-- Icono decorativo -->
				<div class="mb-6">
					<div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-r from-pink-500 to-pink-600 rounded-full shadow-2xl mb-4 shadow-pink-500/50">
						<svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
						</svg>
					</div>
				</div>
				
				<h2 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
					¿Necesitas 
					<span class="bg-gradient-to-r from-pink-500 to-pink-600 bg-clip-text text-transparent">
						inspiración?
					</span>
				</h2>
				
				<p class="text-xl md:text-2xl text-gray-300 mb-10 max-w-3xl mx-auto leading-relaxed">
					Explora nuestra galería de ideas y descubre diseños únicos que se adaptan a tu 
					<span class="font-semibold text-white">estilo personal</span>
				</p>
				
				<!-- Botón mejorado -->
				<div class="group">
					<a 
						href="/galeria" 
						class="inline-flex items-center gap-4 bg-gradient-to-r from-pink-500 to-pink-600 hover:from-pink-600 hover:to-pink-700 text-white font-bold text-lg py-6 px-12 rounded-2xl transition-all duration-500 transform hover:scale-110 shadow-2xl hover:shadow-pink-500/50 relative overflow-hidden"
					>
						<!-- Efecto de brillo -->
						<div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
						
						<span class="relative z-10">Prueba nuestra galería de ideas</span>
						<svg class="w-6 h-6 relative z-10 transition-transform duration-300 group-hover:translate-x-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
						</svg>
					</a>
				</div>
				
				<!-- Texto adicional -->
				<p class="text-sm text-gray-400 mt-6 opacity-80">
					✨ Miles de diseños únicos esperando por ti ✨
				</p>
			</div>
		</section>
		
		<Preguntas />
	</div>
	
	<JsonLd 
		type="website"
		title="WeMasha - Remeras y Buzos Streetwear"
		description="Descubre nuestra colección de remeras y buzos oversize con diseños exclusivos de artistas internacionales como Jonas Brothers, Harry Styles, Taylor Swift, Slipknot y más, así como íconos argentinos como Duki, Emilia Mernes, Messi y muchos otros."
		url="https://wemasha.com"
	/>
</Layout>