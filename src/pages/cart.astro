---
import Layout from "@layouts/LayoutCart.astro";
import Hero from "@components/Hero.astro";
import Modalidad from "@components/Modalidad.astro";
---

<Layout title="WeMasha - Remeras y Buzos Streetwear de tus Artistas Favoritos">
  <div class="max-w-[1440px] mx-auto">
    <Hero title="Carrito" image="/images/categories/personalizado.png" slug="" />
    <div class="max-w-[1200px] mx-auto grid items-center gap-8 mt-16">
      <div class="border border-zinc-300 rounded-2xl overflow-hidden p-8 flex flex-col gap-1 mx-4">
        
        <!-- Aquí comienza el carrito -->
        <div class="flex flex-col">
            <div class="flex items-center font-bold border-b border-zinc-300 py-2">
                <h2>Carrito de Compras</h2>
            </div>

            <!-- Contenedor de los productos del carrito -->
            <div id="carrito-items" class="flex flex-col gap-4">
            
            </div>

                <!-- Carrito vacío -->
                <div id="carrito-vacio" class="items-center gap-4 border-b border-zinc-300 py-4 hidden">
                    <span class="text-center w-full font-bold">El carrito está vacío</span>
                </div>

                <!-- Total del carrito -->
                <div class="mt-4 mb-4 text-right text-2xl font-semibold text-zinc-900 ">
                  Total: AR$<span id="total-precio">0</span>
                </div>

                <div class="items-center gap-4">
                  <span class="text-center w-full font-bold">Información del comprador</span>
                  <form class="mt-4 flex flex-col gap-4" action="">
                    <input name="nombre" id="nombre" placeholder="Nombre y Apellido"  class="w-full rounded-lg border border-zinc-300 p-2" required />
                    <input name="email" id="email" type="email" placeholder="Email" class="w-full rounded-lg border border-zinc-300 p-2" required />
                    <select name="metodo-pago" id="metodo-pago" class="w-full rounded-lg border border-zinc-300 p-2" required>
                      <option value="Transferencia">Pago por transferencia</option>
                      <option value="Tarjeta">Pago con tarjeta (hasta 2 cuotas sin interes)</option>  
                    </select>
                    <span class="text-xs text-zinc-600 ">Los pagos con tarjeta tienen un 15% de recargo.</span>
                    <select name="envio" id="envio" class="w-full rounded-lg border border-zinc-300 p-2" required>
                      <option value="Corrientes">Retiro en Ciudad de Corrientes</option>
                      <option value="Motomandado">Motomandado en Ciudad de Corrientes (Precio a coordinar)</option>
                      <option value="">------------------------------------------------------------</option>
                      <option value="Sucursal">Envio a Sucursal de Correo Argentino a elección ($6000)</option>
                      <option value="Domicilio">Envio a Domicilio por Correo Argentino ($8500)</option>
                      <!-- <option value="Resistencia">Retiro en Ciudad de Resistencia (Chaco)</option> -->
                    </select>
                    <span class="text-xs text-zinc-600 ">Los pedidos mayores a $80.000 tienen envio GRATIS a domicilio.</span>
                    <span class="text-xs text-zinc-600 ">Los envios cotizados arriba son de modalidad Clasico y tardan de 2 a 5 dias habiles en llegar a destino.</span>
                    <span class="text-xs text-zinc-600 ">Los envios de modalidad Expreso tardan de 1 a 3 dias habiles en llegar pero tienen costos mas elevados, consultar por whatsapp.</span>
                    <input name="provincia" id="provincia" placeholder="Provincia" class="w-full rounded-lg border border-zinc-300 p-2" required />
                    <input name="localidad" id="localidad" placeholder="Localidad" class="w-full rounded-lg border border-zinc-300 p-2" required />
                    <input name="direccion" id="direccion" placeholder="Sucursal o dirección para envio"  class="w-full rounded-lg border border-zinc-300 p-2" required />
                    <input name="postal" id="postal" placeholder="Código Postal" class="w-full rounded-lg border border-zinc-300 p-2" required />	
                    <input name="aclaraciones" id="aclaraciones" placeholder="Aclaraciones" class="w-full rounded-lg border border-zinc-300 p-2"/>
                  </form>
                  <div id="error" class="w-full mt-4 hidden">
                    <span
                      class="w-full text-white bg-pink-800 text-center py-2 flex justify-center"
                      >Es necesario completar todos los campos.</span>
                  </div>
                  <div class="mt-4 flex flex-col gap-4 justify-center">
                    <button
                      type="submit"
                      id="comprar-carrito"
                      class="text-white bg-pink-700 text-center rounded-lg w-full py-2 disabled:opacity-90"
                      >Realizar Pedido</button>
                    <button id="vaciar-carrito" class="bg-zinc-800 text-white px-4 py-2 rounded-lg">
                      Vaciar Carrito
                    </button>
                  </div>
                </div>
        </div>
      </div>
    </div>
    <Modalidad />
  </div>
</Layout>

<script>
    import { cargarCarrito } from "@scripts/getCarrito";
    import { sumarEnvio, sumarMetodoPago } from "@scripts/sumarExtras";
    import { eliminarProducto, vaciarCarrito, validarFormulario } from "@scripts/carritoFunctions";
    import {enviarMensaje} from "@scripts/enviarMensaje";

    const carritoItems = document.querySelector('#carrito-items') as HTMLElement;
    const totalPrecioElement = document.querySelector('#total-precio') as HTMLElement;
    const vaciarCarritoBtn = document.querySelector('#vaciar-carrito') as HTMLElement;
    const comprarCarritoBtn = document.querySelector('#comprar-carrito') as HTMLElement;
    const envioSelect = document.querySelector('#envio') as HTMLSelectElement;
    const metodoPagoSelect = document.querySelector('#metodo-pago') as HTMLSelectElement;
    let subTotal = 0;
    
    // Cargar el carrito al cargar la página y devolver el total
    document.addEventListener('DOMContentLoaded', () => {
      subTotal = cargarCarrito() as number;
      const totalPrecio = sumarEnvio(subTotal as number);
      totalPrecioElement.textContent = totalPrecio.toLocaleString('es-AR')
    });

    // Mostrar total con envio y metodo de pago al cambiar selección
    envioSelect.addEventListener('change', () => {
      const totalEnvio = sumarEnvio(subTotal as number);
      const totalPrecio =sumarMetodoPago(totalEnvio as number);
      totalPrecioElement.textContent = totalPrecio.toLocaleString('es-AR')
    });

    metodoPagoSelect.addEventListener('change', () => {
      const totalEnvio = sumarEnvio(subTotal as number);
      const totalPrecio =sumarMetodoPago(totalEnvio as number);
      totalPrecioElement.textContent = totalPrecio.toLocaleString('es-AR')
    });
   
  // Evento de eliminar producto
  carritoItems.addEventListener('click', (event) => {
    const target = event.target as HTMLElement;
    if (target.classList.contains('eliminar-btn')) {
      const index = target.dataset.index ? parseInt(target.dataset.index, 10) : -1;
      if (index !== -1) {
        subTotal = eliminarProducto(index);
        const totalEnvio = sumarEnvio(subTotal as number);
        const totalPrecio =sumarMetodoPago(totalEnvio as number);
        totalPrecioElement.textContent = totalPrecio.toLocaleString('es-AR')
      }
    }
  });

  // Evento para vaciar el carrito
  vaciarCarritoBtn.addEventListener('click', () => {
    subTotal = vaciarCarrito();
    const totalEnvio = sumarEnvio(subTotal as number);
    const totalPrecio =sumarMetodoPago(totalEnvio as number);
    totalPrecioElement.textContent = totalPrecio.toLocaleString('es-AR')
  });

  // Evento para el botón de realizar pedido
  comprarCarritoBtn.addEventListener('click', (event) => {
    event.preventDefault(); // Prevenimos el envío del formulario
    const formularioValido = validarFormulario();
    if (formularioValido) {
      enviarMensaje();
    } 
  });
</script>

